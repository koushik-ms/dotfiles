bindsym $mod+Mod1+a      exec --no-startup-id ./.config/i3/altcmd urxvt
bindsym $mod+Mod1+Return exec --no-startup-id ./.config/i3/altcmd lxterminal
bindsym $mod+Mod1+d      exec --no-startup-id ./.config/i3/altcmd dmenu_run
bindsym $mod+Mod1+p      exec --no-startup-id ./.config/i3/altcmd rofi -show run
bindsym $mod+Mod1+Shift+p exec --no-startup-id ./.config/i3/altcmd rofi -modi drun -show drun

# scratchpad
bindsym $mod+m   move scratchpad
bindsym $mod+o   scratchpad show

# Refresh i3blocks indication of Caps/Num Lock state
bindsym --release Caps_Lock exec pkill -SIGRTMIN+11 i3blocks
bindsym --release Num_Lock  exec pkill -SIGRTMIN+11 i3blocks

