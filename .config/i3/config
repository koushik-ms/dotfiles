  client.focused          $base01 $base01    $base07 $base0F
  client.focused_inactive $base02 $base02    $base03 $base0F
  client.unfocused        $base02 $base02    $base03 $base0F
  client.urgent           $base02 $base08    $base00 $base0F


# Startup programs (run every time)
exec_always --no-startup-id compton -f
# exec_always feh --bg-scale /usr/share/backgrounds/linuxmint-serena/sguiheneuc_contrast.jpg
exec_always --no-startup-id xrandr --output HDMI1 --primary

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        font pango:Font Awesome 9
        position bottom
        status_command i3blocks
        # status_command i3status
        tray_output primary
        strip_workspace_numbers yes
        colors {
              separator $base03
              background $base01
              statusline $base05
              #                  border  background text
              focused_workspace  $base01 $base01    $base07
              active_workspace   $base01 $base02    $base03
              inactive_workspace $base01 $base01    $base03
              urgent_workspace   $base01 $base01    $base08
    }

}

